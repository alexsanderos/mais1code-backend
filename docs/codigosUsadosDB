Criação da tabela depoimentos

create table depoimentos (
	id SERIAL primary key,
	nome varchar (150),
	depoimento text
);

Criação da tabela contatos

create table contatos (
	id SERIAL,
	nome varchar (150),
	email varchar (150),
	cidade varchar (150),
	estado varchar (150),
	telefone bigint,
	assunto varchar (150),
	mensagem varchar (255)
);

Criação da tabela oportunidades

create table oportunidades (
	id SERIAL,
	nome varchar (150),
	empresa varchar (150),
	nivel varchar (150),
	faixa_salarial_de numeric,
	faixa_salarial_ate numeric,
	regime varchar (150)

);